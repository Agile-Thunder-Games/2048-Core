        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "build/app.js",
        "sourceMap": false,
        "charset": "utf-8",
        "declaration": false,
        "diagnostics": true,
        "listFiles": false,
